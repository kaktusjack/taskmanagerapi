const express = require('express');
const router = express.Router();
const taskController = require('../controllers/taskController.js');
const {validateRequest,schemas}=require('../middleware/validator.js');

// Define routes for tasks
/**
 * @swagger
 * /tasks:
 *   get:
 *     summary: Get all tasks
 *     parameters:
 *       - in: query
 *         name: status
 *         schema:
 *           type: string
 *         description: Filter by task status
 *       - in: query
 *         name: page
 *         schema:
 *           type: integer
 *         description: Page number
 *     responses:
 *       200:
 *         description: A list of tasks
 */
router.get('/', taskController.getAllTasks);
router.get('/:id', taskController.getTaskById);
router.post('/',validateRequest(schemas.createTask), taskController.createTask);
router.put('/:id',validateRequest(schemas.updateTask), taskController.updateTask);
router.delete('/:id', taskController.deleteTask);
router.patch('/:id',validateRequest(schemas.updateStatus) ,taskController.updateStatus);

module.exports = router;